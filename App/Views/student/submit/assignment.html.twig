{% extends "student/app.html.twig" %}

{% block title %}{{ title }}{% endblock %}
{% block headCSS %}{% endblock %}

{% block page %}
    <!-- .page -->
    <div class="page">
        <!-- .page-inner -->
        <div class="page-inner">
            <!-- .page-title-bar -->
            <header class="page-title-bar">
                <p class="lead">
                    <span class="font-weight-bold">Submit Assignment</span>
                </p>
            </header><!-- /.page-title-bar -->
            <!-- .page-section -->
            <div class="page-section">
                <!-- .section-block -->
                <div class="section-block">

                    <div class="card card-fluid">
                        <h6 class="card-header"> {{ assignment.assignment_title }} </h6>
                        <div class="card-body">
                            <form method="post">
                                <div class="form-row">
                                    <!-- form column -->
                                    <label for="assignmentTitle" class="col-md-3 mb-3">Title</label> <!-- /form column -->
                                    <div class="col-md-9 mb-3">
                                        <textarea name="assignment" disabled class="form-control" id="assignmentTitle">{{ assignment.assignment }}</textarea>
                                    </div><!-- /form column -->
                                    <!-- form column -->
                                    <label for="assignmentContent" class="col-md-3 mb-3">Assignment</label> <!-- /form column -->
                                    <!-- form column -->
                                    <div class="col-md-9 mb-3">
                                        <textarea name="assignment" class="form-control" id="assignmentContent" cols="30" rows="5"></textarea>
                                    </div><!-- /form column -->
                                </div>
                                <div class="form-actions">
                                    <div class="col-md-3"></div>
                                    <button type="submit" name="submitAssignment" class="btn btn-primary">Submit Assignment</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div><!-- /.section-block -->


            </div><!-- /.page-section -->
        </div><!-- /.page-inner -->
    </div><!-- /.page -->

{% endblock %}

{% block headJS %}
    <script src="/assets/vendor/ckeditor5/ckeditor.js"></script>

    <script src="/assets/vendor/ckfinder/ckfinder.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#assignmentContent' ), {
                // plugins: [ CKFinder,  ],
                toolbar: ["heading","|","bold","italic","link","bulletedList","numberedList",'|',"ckfinder","imageUpload",'|', "blockQuote","insertTable","mediaEmbed","undo","redo"],
                ckfinder: {
                    uploadUrl: '/assets/vendor/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files&responseType=json',
                },
            } )
            .then( editor => {
                window.editor = editor;
            } )
            .catch( err => {
                console.error( err.stack );
            } );
    </script>
{% endblock %}
